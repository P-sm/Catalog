@model Сatalog.Models.DeptsValidEditListModel

@{
    ViewData["Title"] = "EditDept";
}

<h2>Редактирование отдела</h2>

<h4>Отдел</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDept">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DeptEdit.Id" />

            <!-- TODO: Выводить списком названий отделов (текуший родительский отдел выбран) -->
            <div class="form-group">
                @{ 
                    Model.parentId = Model.DeptEdit.ParentId;
                    Model.name = Model.DeptEdit.Name;
                 }
                <label asp-for="parentId" class="control-label"></label>
                <select asp-for="parentId" asp-route-parentId="expand(this).value" class="form-control" asp-items="Model.DeptsValidItem"></select>
            </div>

            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" asp-route-name="@(Model.DeptEdit.Name)" class="form-control" />
                <span asp-validation-for="DeptEdit.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

